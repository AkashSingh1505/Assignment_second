<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notfication_row_id"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="3dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audit Reschedule Alert"
                android:textStyle="bold">

            </TextView>

                <TextView
                    android:id="@+id/notification_content_id"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="An Audit with Customer-Hicare Chid 9 on data 2022-12-09 at time between 12:00-14:00 Has been reschedule with Customer - Hicare Child 9 on date 2022-12-09 at time between 01:00-03:00">

                </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>